  "engines": [
    {
      "clientId": "engine",
      "clientSecret": "engine",
      "scope": "openid profile email engine_read engine_write"
    }
  ],
  "extensions": {
    "path": "/app/extensions",
    "configs": {
      "username_password": {
        "usersPath": "/etc/authority/config/users.json",
        "database": {
          "dialect": "sqlite",
          "storage": "storage/upe-database.sqlite",
          "logging": false
        }
      }
    }
  }
