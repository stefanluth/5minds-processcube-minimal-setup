  "development": true,
  "database": {
    "dialect": "sqlite",
    "storage": "storage/database.sqlite"
  },
  "studio": {
    "enabled": true,
    "scope": "openid profile email engine_read engine_write"
  },
  "portals": [
    {
      "clientId": "portal",
